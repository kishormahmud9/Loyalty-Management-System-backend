      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Kishor Mahmud\",\n  \"email\": \"student@test.com\",\n  \"password\": \"Password123\",\n  \"role\": \"student\"\n}"
